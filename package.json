{
    "name": "@nodescript/cli",
    "version": "0.0.1",
    "type": "module",
    "description": "NodeScript CLI",
    "exports": {
        ".": "./out/main/index.js"
    },
    "files": [
        "out/main/**/*"
    ],
    "scripts": {
        "clean": "rm -rf out *.tsbuildinfo",
        "dev": "run-s clean dev:ts",
        "dev:ts": "tsc -b -w",
        "compile": "run-s compile:*",
        "compile:ts": "tsc -b",
        "lint": "eslint --ext=.js,.ts --cache .",
        "preversion": "npm run lint",
        "version": "run-s compile",
        "postversion": "npm publish --access=public && git push --tags origin main"
    },
    "engines": {
        "node": ">=18"
    },
    "pre-commit": [
        "lint"
    ],
    "devDependencies": {
        "@types/node": "^18.0.1",
        "@ubio/eslint-config": "^1.3.7",
        "esbuild": "^0.14.48",
        "eslint": "^7.32.0",
        "npm-run-all": "^4.1.5",
        "typescript": "^4.7.4"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/NodeScriptLang/cli.git"
    },
    "keywords": [
        "nodescript",
        "visual",
        "programming",
        "language"
    ],
    "author": "UBIO",
    "license": "ISC",
    "homepage": "https://github.com/NodeScriptLang/cli#readme"
}
