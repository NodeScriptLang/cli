{
    "name": "@nodescript/cli",
    "version": "1.0.3",
    "type": "module",
    "description": "NodeScript CLI",
    "exports": {
        ".": "./out/main/index.js"
    },
    "files": [
        "cli.js",
        "out/main/**/*"
    ],
    "bin": {
        "nodescript": "./cli.js"
    },
    "scripts": {
        "clean": "rm -rf out *.tsbuildinfo",
        "dev": "run-s clean dev:ts",
        "dev:ts": "tsc -b -w",
        "compile": "run-s compile:*",
        "compile:ts": "tsc -b",
        "lint": "eslint --ext=.js,.ts --cache .",
        "preversion": "npm run lint",
        "version": "run-s compile",
        "postversion": "npm publish --access=public && git push --tags origin main"
    },
    "engines": {
        "node": ">=18"
    },
    "pre-commit": [
        "lint"
    ],
    "dependencies": {
        "@nodescript/bundler": "^1.2.1",
        "@nodescript/core": "^6.0.0",
        "@nodescript/logger": "^1.4.2",
        "airtight": "^5.6.0",
        "chalk": "^5.0.1",
        "commander": "^9.3.0",
        "dotenv": "^16.0.2",
        "glob": "^9.2.1",
        "mesh-ioc": "^3.1.4",
        "reflect-metadata": "^0.1.13",
        "yaml": "^2.1.1"
    },
    "devDependencies": {
        "@nodescript/eslint-config": "^1.0.4",
        "@types/node": "^18.0.1",
        "eslint": "^8.24.0",
        "npm-run-all": "^4.1.5",
        "typescript": "^4.7.4"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/NodeScriptLang/cli.git"
    },
    "keywords": [
        "nodescript",
        "visual",
        "programming",
        "language"
    ],
    "author": "UBIO",
    "license": "ISC",
    "homepage": "https://github.com/NodeScriptLang/cli#readme"
}
